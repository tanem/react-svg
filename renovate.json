{
  "constraints": {
    "npm": "> 8.0.0"
  },
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":masterIssue",
    ":enableVulnerabilityAlerts"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/test/**"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "depTypeList": [
        "dependencies"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "nock"
      ],
      "allowedVersions": "< 14.0.0"
    },
    {
      "automerge": false,
      "groupName": "react monorepo",
      "labels": [
        "enhancement"
      ],
      "sourceUrlPrefixes": [
        "https://github.com/facebook/react"
      ],
      "updateTypes": [
        "major",
        "minor"
      ]
    },
    {
      "matchPaths": [
        "examples/typescript/package.json",
        "examples/styled-components/package.json"
      ],
      "matchPackageNames": [
        "typescript"
      ],
      "allowedVersions": "< 5.0.0"
    }
  ],
  "stabilityDays": 3
}