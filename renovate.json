{
  "constraints": {
    "npm": "> 8.0.0"
  },
  "extends": [
    "config:js-lib",
    ":rebaseStalePrs",
    ":automergeAll",
    ":label(internal)",
    ":dependencyDashboard",
    ":enableVulnerabilityAlerts"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/test/**",
    "**/examples/**"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "nock"
      ],
      "allowedVersions": "< 14.0.0"
    },
    {
      "automerge": false,
      "groupName": "react monorepo",
      "labels": [
        "enhancement"
      ],
      "matchSourceUrls": [
        "https://github.com/facebook/react**"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ]
    }
  ]
}